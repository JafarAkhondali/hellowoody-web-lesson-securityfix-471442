@import "/assets/iconfont/iconfont.wxss";

.card {
  /* border:1px solid var(--themeGrey); */
  border-radius: 16rpx;
  padding:20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 16rpx;
  box-shadow: 2rpx 2rpx 16rpx rgb(0 0 0 / 0.1);
}

.card-line {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.card-line:nth-child(3) {
  margin-bottom: 30rpx;
}
.card-line:last-child {
  margin-bottom: unset;
}

.card-line-item {
  margin-right: 16px;
  font-size:24rpx;
  color:var(--themeDarkGrey);
}

.welfare {
  background-color: #76a34a46;
  font-size:20rpx;
  padding:4rpx 6rpx;
}