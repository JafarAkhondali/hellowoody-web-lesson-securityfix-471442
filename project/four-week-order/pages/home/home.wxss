.search-input-extend {
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-scroll {
  background-color: var(--themeColor);
  height:190rpx;
  font-size: var(--themeFontSize);
  color:#fff;
}

.top-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left:24rpx;
}

.content {
  background-color: #fff;
  height:calc(100vh - 86rpx - 160rpx);
  margin-top:-30rpx;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding:50rpx 32rpx;
  color:var(--themeFontColor);
}

.content-top-bar {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.content-top-bar-title {
  font-weight: bold;
  font-size:36rpx;
}

.content-top-bar-icon {
  display: flex;
}

.icon-item {
  width: 60rpx;
  height: 60rpx;
  background-color: #FF374B;
  border-radius: 50%;
  margin-left:24rpx;
  box-shadow: 0rpx 2rpx 16rpx rgb(255 0 0 / 0.3);
}