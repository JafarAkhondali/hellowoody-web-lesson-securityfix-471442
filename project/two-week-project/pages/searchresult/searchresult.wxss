.search-input-extend {
  padding-left:32rpx;
  box-sizing: border-box;
}

.list {
  padding:20rpx;
  box-sizing: border-box;
}

.list-item {
  height: 200rpx;
  box-shadow:0rpx 2rpx 16rpx rgb(0 0 0 / 0.1);
  margin-bottom:26rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
}

.list-item-img {
  height: 200rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.list-item-desc {
  flex:1;
  padding:20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
